# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:7777

# Database Configuration
# Local MongoDB: mongodb://localhost:27017/sawit_db
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/sawit_db
MONGODB_URI=mongodb://localhost:27017/sawit_db

# JWT Configuration
# IMPORTANT: Change this to a strong random string in production!
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Rate Limiting
RATE_LIMIT_MAX=100

# OAuth Configuration (Optional - for reference only)
# Actual OAuth credentials are configured in frontend
# GOOGLE_CLIENT_ID=your_google_client_id_here
# FACEBOOK_APP_ID=your_facebook_app_id_here

